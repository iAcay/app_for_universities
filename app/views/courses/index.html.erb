<h1 class='text-center mt-5'>Course Listing</h1>

<div class="container mt-5">
  <div class="row">
    <% courses.each do |course| %>
      <div class="col-sm-4">
        <div class="card mb-5">
          <div class="card-body">
            <p>Code: <%= course.short_name %></p>
            <hr class='divider'>
            <h5 class="card-title">Name: <%= course.name %></h5>
            <p class="card-text">Description: <%= course.description %></p>
            <%= link_to 'Read more', '#', class: 'btn btn-primary' %>
            <%= link_to 'Enroll', '#', class: 'btn btn-success' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
